{
  "name": "gmaps-app",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap-cloud-sdk/http-client": "^4.4.0",
    "@sap-cloud-sdk/resilience": "^4.4.0",
    "@sap/cds": "^9",
    "@sap/cds-common-content": "^3.1.0",
    "@sap/xssec": "^4",
    "axios": "^1",
    "express": "^4",
    "passport": "^0.7.0",
    "uuid": "^11"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9",
    "cds-plugin-ui5": "^0.13.0",
    "mbt": "^1.2.29",
    "rimraf": "^5.0.5"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-routes": "cds watch --open routes.routes/index.html?sap-ui-xx-viewCache=false --livereload false",
    "undeploy": "cf undeploy gmaps-app --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "private": true,
  "workspaces": [
    "app/*"
  ],
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite",
        "credentials": {
          "database": "db.sqlite"
        }
      },
      "auth": {
        "kind": "mocked",
        "users": {
          "alice": {
            "roles": [
              "gmaps_user"
            ]
          }
        }
      },
      "GoogleAPI-SR": {
        "kind": "rest",
        "credentials": {
          "url": "https://maps.googleapis.com"
        }
      },
      "[production]": {
        "db": {
          "kind": "hana"
        },
        "GoogleAPI-SR": {
          "kind": "rest",
          "credentials": {
            "destination": "GoogleAPI-SR"
          }
        },
        "auth": {
          "kind": "xsuaa"
        }
      },
      "destinations": true
    }
  },
  "sapux": [
    "app/routes"
  ]
}
